{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "WP Listen for XDebug",
        "type": "php",
        "request": "launch",
        "port": 9003,
        "pathMappings": {
          "/var/www/html/wp-content/plugins/mintgate-verifier": "${workspaceFolder}/wpWidget/plugin"
        },
        "xdebugSettings": {
          "max_data": 65535,
          "show_hidden": 1,
          "max_children": 100,
          "max_depth": 5
        }
      }
    ]
  }